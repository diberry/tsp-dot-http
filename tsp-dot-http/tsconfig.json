{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
